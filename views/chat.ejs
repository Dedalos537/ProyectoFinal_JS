<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="main-container">
        <!-- Sidebar Izquierda -->
        <div class="sidebar">
            <div class="user-info">
                <div class="user-logo">
                    <span id="user-initial"></span>
                </div>
                <div class="user-details">
                    <p id="user-name"><%= username %></p>
                </div>
                <button id="logout" class="logout-btn">Cerrar SesiÃ³n</button>
            </div>
        </div>
        <!-- Contenedor del Chat -->
        <div class="chat-container">
            <div id="chat-window" class="chat-window"></div>
            <input type="hidden" id="username" value="<%= username %>">
            
            <!-- Contenedor de notificaciones de entrada y salida -->
            <div id="user-notifications" class="user-notifications"></div>
            
            <div class="chat-input">
                <input type="text" id="msg" placeholder="Escribe un mensaje">
                <button id="send">Enviar</button>
            </div>
        </div>
    </div>
    <script src="https://cdn.socket.io/4.8.1/socket.io.min.js"></script>
    <script src="/js/app.js"></script>
</body>
</html>
